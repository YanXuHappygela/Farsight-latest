SET(CONCERT_ROOT_DIR "" CACHE PATH "CONCERT root directory")

FIND_PATH(CONCERT_INCLUDE_DIR
  ilconcert/ilomodel.h
  PATHS "C:/ILOG/CPLEX_Studio_AcademicResearch122/concert/include"
  HINTS ${CONCERT_ROOT_DIR}/include
)
FIND_LIBRARY(CONCERT_LIBRARY
  concert
  PATHS "C:/ILOG/CPLEX_Studio_AcademicResearch122/concert/lib/x64_.net2005_8.0/stat_mda"
  HINTS ${CONCERT_ROOT_DIR}/bin
)

INCLUDE(FindPackageHandleStandardArgs)
FIND_PACKAGE_HANDLE_STANDARD_ARGS(CONCERT DEFAULT_MSG CONCERT_LIBRARY CONCERT_INCLUDE_DIR)

IF(CONCERT_FOUND)
  SET(CONCERT_INCLUDE_DIRS ${CONCERT_INCLUDE_DIR})
  SET(CONCERT_LIBRARIES ${CONCERT_LIBRARY})
  IF(CMAKE_SYSTEM_NAME STREQUAL "Linux")
    SET(CONCERT_LIBRARIES "${CONCERT_LIBRARIES};m;pthread")
  ENDIF(CMAKE_SYSTEM_NAME STREQUAL "Linux")
ENDIF(CONCERT_FOUND)

MARK_AS_ADVANCED(CONCERT_LIBRARY CONCERT_INCLUDE_DIR)

